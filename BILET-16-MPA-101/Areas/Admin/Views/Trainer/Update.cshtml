@using BILET_16_MPA_101.ViewModels
@model TrainerUpdateVM

<div class="container">
    <div class="row">

        <form method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagePath"></label>
                <input asp-for="ImagePath" class="form-control" placeholder="Enter Image Path">
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId"
                        class="form-select"
                        asp-items="ViewBag.Departments">
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning">
                Update
            </button>
        </form>

    </div>
</div>
